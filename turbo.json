{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": ["DATABASE_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build", "^db:generate"],
			"env": ["DATABASE_URL"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^db:generate"],
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		}
	},
	"ui": "tui"
}
